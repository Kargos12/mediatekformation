{% extends "basefront.html.twig" %}

{% block body %}
    <form class="form-inline mt-1" method="POST" action="{{ path('admin.niveaux.ajout') }}">
        <div class="form-group mr-1 mb-2">
            <input type="text" class="sm" name="nom">
        </div>
        <button type="submit" class="btn btn-primary mb-2 btn-sm">Ajouter</button>
    </form>
        
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for niveau in niveaux %}
                <tr>
                    <td>
                        {{ niveau.nom }}
                    </td>
                    <td>
                        <a href="{{ path('admin.niveaux.suppr'), (id:niveau.id) }}"
                           class="btn btn-danger"
                           onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer le niveau {{niveau.nom}} ?')">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>    
 {% endblock %}
